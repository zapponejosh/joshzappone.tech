      <a href="#" class="contact-link">Connect on LinkedIn</a>
      <a href="#" class="contact-link">Get to know me</a>
    </div>
    <div class="tile t-2">
      <form action="/" id="contact">
        <div class="form-group">
          <div class="f-name-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameInput" required>
          </div>

          <div class="f-email-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailInput" required>
          </div>

        </div>
        <div>
          <label for="message">Message</label>
          <textarea class="form-control" name="message" id="message" rows="4" required></textarea>
        </div>
        <div>
          <button class="btn btn-primary" type="submit">Release the owls</button>
          <span id="response">Message sent!</span>
        </div>
      </form>
    </div>
  </div>
</section>